package org.firstinspires.ftc.teamcode;

import com.qualcomm.robotcore.eventloop.opmode.Disabled;
import java.util.Set;
import com.qualcomm.robotcore.hardware.Servo;
import com.qualcomm.robotcore.eventloop.opmode.OpMode;
import com.qualcomm.robotcore.eventloop.opmode.TeleOp;
import com.qualcomm.robotcore.hardware.DcMotor;
import com.qualcomm.robotcore.util.ElapsedTime;
import com.qualcomm.robotcore.util.Range;

@TeleOp(name="Robot Drive", group="Iterative Opmode")
public class Test extends OpMode
{
    // Declare OpMode members.
    private ElapsedTime runtime = new ElapsedTime();
    private DcMotor FR = null;
    private DcMotor BR = null;
    private DcMotor FL = null;
    private DcMotor BL = null;

    private Servo Claw = null;
    private Servo Arm = null;
    private Servo Base = null;
    
    boolean isHeld;
    /*
     * Code to run ONCE when the driver hits INIT
     */
    @Override
    public void init() {
        telemetry.addData("Status", "Initialized");

        // Initialize the DCMotors
        FR  = hardwareMap.get(DcMotor.class, "Front Right");
        BR  = hardwareMap.get(DcMotor.class, "Back Right");
        FL  = hardwareMap.get(DcMotor.class, "Front Left");
        BL  = hardwareMap.get(DcMotor.class, "Back Left");

        //Initalize the Servos
        Claw = hardwareMap.get(Servo.class, "Claw");
        Arm = hardwareMap.get(Servo.class, "Arm");
        Base = hardwareMap.get(Servo.class, "Base");
        
        // Set Default Positions
        FR.setDirection(DcMotor.Direction.FORWARD);
        FL.setDirection(DcMotor.Direction.REVERSE);
        BR.setDirection(DcMotor.Direction.FORWARD);
        BL.setDirection(DcMotor.Direction.REVERSE);
        
        Claw.setPosition(.5);
        Arm.setPosition(.5);
        Base.setPosition(.5);
            
        isHeld = false;
        
        telemetry.addData("Status", "Initialized");
    }

    /*
     * Code to run REPEATEDLY after the driver hits INIT, but before they hit PLAY
     */
    @Override
    public void init_loop() {
    }

    /*
     * Code to run ONCE when the driver hits PLAY
     */
    @Override
    public void start() {
        runtime.reset();
    }

    /*
     * Code to run REPEATEDLY after the driver hits PLAY but before they hit STOP
     */
    @Override
    public void loop() {
        
        //Get Driver 1 Controller input and control wheels with it
        double leftPower = -gamepad1.left_stick_y;
        double rightPower = -gamepad1.right_stick_y ;
        
        //Throttle Input
        leftPower /= 1.5;
        rightPower /= 1.5;
        
        //Set power of Motors
        FL.setPower(leftPower);
        BL.setPower(leftPower);
        FR.setPower(rightPower);
        BR.setPower(rightPower);
        
        //Get Driver 2 Controller input and control servos with it
        //Move Base with left Stick
        if(gamepad2.left_stick_y > 0)
            Base.setPosition(1);
        else if(gamepad2.left_stick_y < 0)
            Base.setPosition(0);
        else
            Base.setPosition(.5);

        //Move Arm with right Stick
        if(gamepad2.right_stick_y > 0)
            Arm.setPosition(1);
        else if(gamepad2.left_stick_y < 0)
            Arm.setPosition(0);
        else
            Arm.setPosition(.5);

        //Move Claw if it is not held in place
        if(!isHeld)
        {
            //if left trigger close, right trigger open, nothing stay
            if(gamepad2.left_trigger > 0)
                Claw.setPosition(1);
            else if(gamepad2.right_trigger > 0)
                Claw.setPosition(0);
            else
                Claw.setPosition(.5);
        }
        
        //Lock and unlock with right bumper
        if(gamepad2.right_bumper)
            isHeld = !isHeld;
            
        //Show Base time and wheel power.
        telemetry.addData("Status", "Run Time: " + runtime.toString());
        telemetry.addData("Motors", "left (%.2f), right (%.2f)", leftPower, rightPower);
    }

        
    @Override
    public void stop() {
    }

}
